    <div class="student-grid">
      <div class="detail-item">
        <strong>Full Name</strong>
        {{data.name}}
      </div>
      <div class="detail-item">
        <strong>Email</strong>
        {{data.email}}
      </div>
      <div class="detail-item">
        <strong>Date of Birth</strong>
        {{data.dob}}
      </div>
      <div class="detail-item">
        <strong>Gender</strong>
        {{data.sex}}
      </div>
      <div class="detail-item">
        <strong>Marital Status</strong>
        {{data.marital_status}}
      </div>
      <div class="detail-item">
        <strong>School</strong>
        {{data.school}}
      </div>
      <div class="detail-item">
        <strong>Matric Number</strong>
