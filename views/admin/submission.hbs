      </div>
      <div class="detail-item">
        <strong>Phone Number</strong>
        {{data.phone}}
      </div>
      <div class="detail-item">
        <strong>Admission Year</strong>
        {{data.admission_year}}
      </div>
      <div class="detail-item">
        <strong>Current Level</strong>
        {{data.school_level}}
      </div>
      <div class="detail-item">
        <strong>LG of Origin</strong>
        {{data.lg_origin}}
      </div>
      <div class="detail-item">
        <strong>LG of Residence</strong>
        {{data.lg_resident}}
      </div>
